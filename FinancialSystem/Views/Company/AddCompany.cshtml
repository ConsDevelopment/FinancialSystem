
@{
    ViewBag.Title = "AddCompany";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

@Styles.Render("~/Content/Maintenance/add-items")
@Scripts.Render("~/scripts/Maintenance/Company")
<div class="container">
	<!-- Page Content goes here -->
	<div class="row">
		<div class="col s16">
			<div class="card white darken-1">
				<div class="card-content">
					<table class="responsive-table">
						<thead>
							<tr>
								<th>NAME</th>
								<th>LOGO</th>
								<th>SMALL LOGO</th>
								<th>CODE</th>
								<th>PHONE</th>
								<th>ADDRESS</th>
								<th>EMAIL</th>
								<th>TIN</th>
							</tr>
						</thead>

						<tbody>
							<tr>
								<td>
									<input type="text" placeholder="Name">
								</td>
								<td>
									@*<input type="file" id="logoUploadForm" name="image" />*@
									<div class="file-field input-field">
										<div class="btn">
											<span>Browse</span>
											<input type="file">
										</div>
										<div class="file-path-wrapper">
											<input class="file-path validate" type="text">
										</div>
									</div>
								</td>
								<td>
									@*<input type="file" id="smallLogoUploadForm" name="image" />*@
									<div class="file-field input-field">
										<div class="btn">
											<span>Browse</span>
											<input type="file">
										</div>
										<div class="file-path-wrapper">
											<input class="file-path validate" type="text">
										</div>
									</div>
								</td>
								<td>
									<input type="text" placeholder="Code">
								</td>
								<td>
									<input type="text" placeholder="Phone">
								</td>
								<td>
									<textarea id="Address" type="textarea" name="Address"
											  placeholder="Address"></textarea>
								</td>
								<td>
									<input type="text" placeholder="Email">
								</td>
								<td>
									<input type="text" placeholder="Tin">
								</td>
								<td>
									<a onclick="AddCompany(this)" class="btn-floating pulse btn-small waves-effect waves-light green modal-trigger" href="#modal4">
										<i class="material-icons">add</i>
									</a>
								</td>

							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

	<!-- Modal Structure Add -->
	<div id="modal4" class="modal">
		<div class="modal-content">
			<p>Are you sure you want to ADD this item?</p>
		</div>
		<div class="modal-footer">
			<a href="#!" class="modal-close waves-effect waves-green btn-flat"
			   onclick="AddingCompany()">Yes</a>
			<a href="#!" class="modal-close waves-effect waves-green btn-flat">No</a>
		</div>
	</div>
</div>
