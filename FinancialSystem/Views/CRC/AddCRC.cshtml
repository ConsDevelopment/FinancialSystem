
@{
    ViewBag.Title = "AddCRC";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

@Styles.Render("~/Content/Maintenance/add-items")
@Scripts.Render("~/scripts/Maintenance/CRC")
<div class="container">
	<!-- Page Content goes here -->
	<div class="row">
		<div class="col s10">
			<div class="card white darken-1">
				<div class="card-content">
					<table class="responsive-table">
						<thead>
							<tr>
								<th>CRC CODE</th>
								<th>CRC NAME</th>
							</tr>
						</thead>

						<tbody>
							<tr>
								<td>
									<input type="text" placeholder="CRC Code">
								</td>
								<td>
									<input type="text" placeholder="CRC Name">
								</td>
								<td>
									<a onclick="AddCRC(this)" class="btn-floating pulse btn-small waves-effect waves-light green modal-trigger" href="#modal4">
										<i class="material-icons">add</i>
									</a>
								</td>

							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

	<!-- Modal Structure Add -->
	<div id="modal4" class="modal">
		<div class="modal-content">
			<p>Are you sure you want to ADD this item?</p>
		</div>
		<div class="modal-footer">
			<a href="#!" class="modal-close waves-effect waves-green btn-flat"
			   onclick="AddingCRC()">Yes</a>
			<a href="#!" class="modal-close waves-effect waves-green btn-flat">No</a>
		</div>
	</div>
</div>

